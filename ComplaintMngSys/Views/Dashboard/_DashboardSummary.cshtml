@model ComplaintMngSys.Models.DashboardViewModel.DashboardDataViewModel

<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-blue">
            <div class="inner">
                <h3>@Model.DashboardSummaryViewModel.TotalComplaint</h3>

                <p>Total Complaint</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="@Url.Action("IndexAllComplained", "ComplaintManage")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-gradient-purple">
            <div class="inner">
                <h3>@Model.DashboardSummaryViewModel.TotalComplaintResolved</h3>

                <p>Complaint Resolved</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("IndexAllComplained", "ComplaintManage")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-cyan">
            <div class="inner">
                <h3>@Model.DashboardSummaryViewModel.TotalUser</h3>

                <p>Total User</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("Index", "UserManagement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>


    <a href="#" onclick="AddEdit(-1)" class="info-box col-lg-3">
        <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-plug"></i></span>
        <div class="info-box-content">
            <span class="info-box-text"></span>
            <span class="info-box-number">Add New Complaint</span>
        </div>
    </a>
</div>
