@model ComplaintMngSys.Models.UserAccountViewModel.UpdateRoleViewModel
@{
    ViewData["Title"] = "Manage Role";
}

<input type="text" id="myInput" onkeyup="SearchInHTMLTable()" placeholder="Search for Page Name.." title="Type in a name">
<div class="panel panel-info">
    <form id="frmManageRole">
        <input type="hidden" id="ApplicationUserId" asp-for="ApplicationUserId" />
        <input type="hidden" id="CurrentURL" asp-for="CurrentURL" />

        <div class="card">
            <div class="card-header">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10 pull-left">
                    <input type="checkbox" id="checkAll" /> <b>Check All</b>
                </div>
            </div>
            <br />
            <div class="card-body">
                <table class="CustomBlueTable" id="myTable" border="1">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Page Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                            @for (int i = 0; i < Model.listManageUserRolesViewModel.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @index
                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.listManageUserRolesViewModel[i].RoleId" />
                                            <input type="hidden" asp-for="@Model.listManageUserRolesViewModel[i].RoleName" />
                                            <input asp-for="@Model.listManageUserRolesViewModel[i].Selected" class="form-check-input" />
                                            <label class="form-check-label" asp-for="@Model.listManageUserRolesViewModel[i].Selected">
                                                @Model.listManageUserRolesViewModel[i].RoleName
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>
            </div>
            <div class="card-footer">
                <input type="button" value="Update" onclick="UpdateRole()" class="btn btn-primary" style="width:auto" />
                <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </form>
</div>


<style>
    * {
        box-sizing: border-box;
    }

    #myInput {
        /*background-image: url('/css/searchicon.png');*/
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 100%;
        font-size: 16px;
        padding: 12px 20px 12px 40px;
        border: 1px solid #ddd;
        margin-bottom: 12px;
    }
</style>

<script>
    $("#checkAll").click(function () {
        $('input:checkbox').not(this).prop('checked', this.checked);
    });
    $('#CurrentURL').val(window.location.pathname);
</script>