@model ComplaintMngSys.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>
<form asp-action="ForgotPassword" method="post">
    <div>
        <label asp-for="Email"></label>
        <div class="input-group mb-3">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block btn-flat">Reset Password</button>
</form>
<p class="mb-0">
    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-center">Register a new membership</a>
</p>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
